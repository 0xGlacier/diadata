FROM us.icr.io/dia-registry/devops/build:v1.0.1-tekton-ci-beta-16 as build

WORKDIR $GOPATH/src/

COPY ./cmd/services/cviService ./
RUN go install

RUN ls -la /go/bin

FROM gcr.io/distroless/base
COPY --from=build /go/bin/cviService /bin/cviService
COPY --from=build /config/ /config/

CMD ["cviService"]
