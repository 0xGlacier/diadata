FROM us.icr.io/dia-registry/devops/build:v1.0.1-tekton-ci-beta-11 as build

WORKDIR $GOPATH/src/

COPY ./cmd/services/filtersBlockService ./

WORKDIR $GOPATH/src/github.com/diadata-org/diadata/cmd/services/filtersBlockService
RUN go install

FROM gcr.io/distroless/base

COPY --from=build /go/bin/filtersBlockService /bin/filtersBlockService

CMD ["filtersBlockService"]